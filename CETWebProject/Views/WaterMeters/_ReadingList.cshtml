@model IEnumerable<CETWebProject.Data.Entities.Reading>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UsageAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReadingTime)
            </th>
            <th data-dt-order="disable">Actions</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UsageAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReadingTime)
                </td>
                @if (this.User.IsInRole("Employee"))
                {

                    <td>
                        <a asp-action="EditReading" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="DeleteReading" asp-route-id="@item.Id" class="btn btn-danger"> Delete </a>
                        <a asp-controller="Invoice" asp-action="EmployeeIssueInvoice" asp-route-id="@item.Id" class="btn btn-success"> Issue an invoice </a>
                    </td>

                }
            </tr>
        }
    </tbody>
</table>

@section Scripts
{
    <script type="text/javascript">
        $(document).ready( function () {
            $('.table').DataTable();
        } );
    </script>
}